---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = blogPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

const recentPosts = sortedPosts.slice(0, 3);
---

<BaseLayout title="Home" description="Personal blog with thoughts, projects, and things I've learned.">
  <main class="home-container">
    <div class="home-content">
      <!-- Personal Branding Section -->
      <section class="intro-section">
        <h1 class="home-title">Hi, I'm Rahil</h1>
        <p class="intro-statement">
          I like building things and understanding why improbable things happen.
        </p>
        <p class="intro-description">
          My work has largely lived at the intersection of technology and real-world impact. 
          I enjoy going down rabbit holes in opportunities I know little about, especially when 
          they challenge how I think. The experiences that force a shift in perspective, whether 
          comfortable or not, tend to stick with me the longest and matter the most.
        </p>
      </section>

      <!-- Personal Details Section -->
      <section class="personal-details">
        <div class="detail-item">
          <span class="detail-label">Currently:</span>
          <span class="detail-value">Building, learning, exploring</span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Interests:</span>
          <span class="detail-value">Technology, design, philosophy, continuous learning</span>
        </div>
        <div class="detail-item">
          <span class="detail-label">Connect:</span>
          <span class="detail-value">
            <a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="social-link">LinkedIn</a>
            <span class="separator">·</span>
            <a href="https://github.com" target="_blank" rel="noopener noreferrer" class="social-link">GitHub</a>
            <span class="separator">·</span>
            <a href="/books" class="social-link">Books</a>
            <span class="separator">·</span>
            <a href="/about" class="social-link">About</a>
          </span>
        </div>
      </section>

      <!-- Blog Section -->
      <section class="blog-section">
        <h2 class="section-title">Recent Writing</h2>

        {recentPosts.length > 0 ? (
          <div class="posts-list">
            {recentPosts.map((post) => {
              const slug = post.id.replace(/\.(md|mdx)$/, '');
              return (
              <article class="post-item">
                <a href={`/blog/${slug}/`} class="post-item-link">
                  <h3 class="post-item-title">{post.data.title}</h3>
                  {post.data.description && (
                    <p class="post-item-description">{post.data.description}</p>
                  )}
                  <time 
                    class="post-item-date"
                    datetime={post.data.publishDate.toISOString()}
                  >
                    {post.data.publishDate.toLocaleDateString('en-us', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                </a>
              </article>
              );
            })}
          </div>
        ) : (
          <p class="no-posts">No posts yet. Check back soon!</p>
        )}
        {sortedPosts.length > 3 && (
          <a href="/blog" class="view-all-link">View all posts →</a>
        )}
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .home-content {
    max-width: 800px;
  }

  .home-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .home-subtitle {
    font-size: 1.125rem;
    color: #666;
    margin-bottom: 3rem;
  }

  /* Intro Section */
  .intro-section {
    margin-bottom: 3rem;
  }

  .intro-statement {
    font-size: 1.25rem;
    color: #333;
    margin: 1rem 0 1.5rem 0;
    line-height: 1.6;
    font-weight: 400;
  }

  .intro-description {
    font-size: 1rem;
    color: #666;
    line-height: 1.7;
    max-width: 700px;
  }

  /* Personal Details Section */
  .personal-details {
    margin: 3rem 0;
    padding: 2rem 0;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
  }

  .detail-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .detail-item:last-child {
    margin-bottom: 0;
  }

  .detail-label {
    color: #999;
    min-width: 80px;
    font-weight: 500;
  }

  .detail-value {
    color: #333;
    flex: 1;
  }

  .social-link {
    color: #1a1a1a;
    text-decoration: underline;
    text-decoration-color: #ccc;
    text-underline-offset: 3px;
    transition: text-decoration-color 0.2s;
  }

  .social-link:hover {
    text-decoration-color: #1a1a1a;
  }

  .separator {
    color: #ccc;
    margin: 0 0.5rem;
  }

  /* Blog Section */
  .blog-section {
    margin-top: 4rem;
  }

  .no-posts {
    color: #999;
    font-style: italic;
    margin: 2rem 0;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 2rem;
    letter-spacing: -0.01em;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-item {
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e5e5;
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-item-link {
    display: block;
    transition: opacity 0.2s;
  }

  .post-item-link:hover {
    opacity: 0.7;
  }

  .post-item-title {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .post-item-description {
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
    margin: 0.5rem 0;
  }

  .post-item-date {
    font-size: 0.875rem;
    color: #999;
    display: block;
    margin-top: 0.75rem;
  }

  .view-all-link {
    display: inline-block;
    margin-top: 2rem;
    color: #1a1a1a;
    font-size: 0.95rem;
    transition: opacity 0.2s;
  }

  .view-all-link:hover {
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .home-container {
      padding: 2rem 1.5rem;
    }

    .home-title {
      font-size: 2rem;
    }

    .home-subtitle {
      font-size: 1rem;
    }

    .intro-statement {
      font-size: 1.125rem;
    }

    .intro-description {
      font-size: 0.95rem;
    }

    .detail-item {
      flex-direction: column;
      gap: 0.25rem;
    }

    .detail-label {
      min-width: auto;
    }

    .post-item-title {
      font-size: 1.25rem;
    }
  }
</style>

